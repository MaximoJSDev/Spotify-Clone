---
import type { Playlist } from "@/lib/data";
import { CardPlayButton } from "@/components/CardPlayButton";
interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, color } = playlist;
---

<article
  data-color={color.dark}
  class="w-64 lg:w-[calc(50%-8px)] xl:w-[calc(33%-8.1px)] relative group lg:grow-0 grow bg-zinc-500/30 hover:bg-white/20 shadow-lg hover:shadow-xl transition-all duration-1000 rounded-md overflow-hidden"
>
  <div
    class="absolute right-4 bottom-0 opacity-0 transition duration-300 group-hover:-translate-y-4 group-hover:opacity-100 z-10"
  >
    <CardPlayButton id={id} client:visible />
  </div>
  <a
    href={`/playlist/${id}`}
    class="w-full playlist-item flex relative overflow-hidden item-center gap-4 pr-2"
    transition:name=`playlist ${id} box`
  >
    <picture class="h-full w-20 flex-none">
      <img
        src={cover}
        alt={`cover of ${title}`}
        class="object-cover w-full h-full"
        transition:name=`playlist ${id} image`
      />
    </picture>
    <div class="lg:p-1 flex items-center truncate text-white">
      <h4
        class="font-bold text-lg whitespace-nowrap overflow-hidden text-ellipsis"
        transition:name=`playlist ${id} title`
      >
        {title}
      </h4>
    </div>
  </a>
</article>
